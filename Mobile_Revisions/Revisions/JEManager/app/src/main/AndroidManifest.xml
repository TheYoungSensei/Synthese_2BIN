<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.ipl.csacre15.jemanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="Builder"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".businessDays.BusinessDayListActivity"
            android:label="@string/title_businessday_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".businessDays.BusinessDayDetailActivity"
            android:label="@string/title_businessday_detail"
            android:parentActivityName=".businessDays.BusinessDayListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".businessDays.BusinessDayListActivity" />
        </activity>
    </application>

</manifest>